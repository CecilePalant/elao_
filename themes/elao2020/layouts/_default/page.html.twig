{% set title = page.title ~ ' &middot; ' ~ site.title %}
{% if page.type == 'homepage' %}
{% set title = site.title ~ ' &middot; ' ~ site.baseline %}
{% endif %}

<!DOCTYPE html>
<html lang="{{ site.language|default('en') }}">
    <head>
    {% block head %}
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{{ site.title }}</title>
        <meta property="og:title" content="{{ site.title }}" />
        <meta property="og:locale" content="{{ site.language.locale|default('en') }}" />
        <meta name="description" content="{{ site.description }}" />
        <meta property="og:description" content="{{ site.description }}" />
        <link rel="canonical" href="{{ url(page, {canonical:true}) }}" />
        <meta property="og:url" content="{{ url(page, {canonical:true}) }}" />
        <meta property="og:site_name" content="{{ site.title }}" />
        <link rel="stylesheet" href="{{ url(toCSS('style.scss')) }}">
    {% include 'partials/alternates.html.twig' %}
    {% endblock head %}
    </head>
    <body>
        <header class="header">
        {% block header %}
            <a href="{{ url('/', {canonical:true}) }}">{{ site.title }}</a>
        {% endblock %}
            <nav class="nav">
                <ul>
                    {% for entry in site.menus.main|sortByWeight %}
                    <li class="nav__item">
                        <a class="{% if url(page) == url(entry.url) %} selected{% endif %}" href="{{ url(entry.url) }}">{{ entry.name }}</a>
                        {%- if not loop.last %} - {% endif %}
                    </li>
                    {% endfor %}
                </ul>
            </nav>
        </header>
        <main>
        {% block content %}
            {{ page.content }}
        {% endblock content %}
        </main>
        <footer class="footer">
            <section>
                <h4>Nos liens</h4>
                {% for entry in site.menus.main|sortByWeight %}
                    <a class="{% if url(page) == url(entry.url) %} selected{% endif %}" href="{{ url(entry.url) }}">{{ entry.name }}</a>
                    {%- if not loop.last %} - {% endif %}
                {% endfor %}
            </section>
            <section>
                <h4>Nous suivre</h4>

                {% for entry in site.menus.social|sortByWeight %}
                    <a href="{{ url(entry.url) }}">{{ entry.name }}</a>
                    {%- if not loop.last %} - {% endif %}
                {% endfor %}
            </section>
        </footer>
        <script src="{{ url('/anchor.js') }}"></script>
        <script>anchors.add();</script>
        {% include 'partials/googleanalytics.js.twig' %}
    </body>
</html>
