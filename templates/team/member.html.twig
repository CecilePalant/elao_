{% extends 'base.html.twig' %}

{% block content %}
    <ul class="breadcrumb">
        <li class="breadcrumb__item">
            <a href="#">La tribu</a>
         </li>
        <li class="breadcrumb__item">
            {{ member.name }}
        </li>
    </ul>
    <div class="member">
        <div class="member__infos">
            <h1 class="h1--small">
                Découvrez
                <span>{{ member.name }}</span>
            </h1>
        </div>

        <div class="member__image">
            <img src="https://www.fillmurray.com/500/680" alt="Portrait de {{ member.name }}">
            <div class="experience">
                <span>3</span>
                ans dans la tribu
            </div>
        </div>

        <div class="member__profile">
            <p class="job">{{ member.position }}</p>

            <div class="description">
                <p>Lorem, ipsum dolor, sit amet consectetur adipisicing elit. Vitae nemo itaque culpa ducimus corrupti nesciunt.</p>
            </div>

            <div class="socials socials--inline">
                <ul>
                    {# {% if member.website %}
                        <li>
                            <a href="{{ member.website }}">
                                <i class="icon icon--website" aria-hidden="true"></i>
                                <span class="screen-reader">Site personnel de {{ member.name }}</span>
                            </a>
                        </li>
                    {% endif %} #}
                    {% if member.twitter %}
                        <li>
                            <a href="https://twitter.com/{{ member.twitter }}">
                                <i class="icon icon--twitter" aria-hidden="true"></i>
                                <span class="screen-reader">Compte Twitter de {{ member.name }}</span>
                            </a>
                        </li>
                    {% endif %}
                    {% if member.github %}
                        <li>
                            <a href="https://github.com/{{ member.github }}">
                                <i class="icon icon--github" aria-hidden="true"></i>
                                <span class="screen-reader">Compte Github de {{ member.name }}</span>
                            </a>
                        </li>
                    {% endif %}
                    {# <!-- Todo : possibilité d'ajouter un compte linkedin -->
                    <li>
                        <a href="#">
                            <i class="icon icon--linkedin" aria-hidden="true"></i>
                            <span class="screen-reader">Compte Linkedin de {{ member.name }}</span>
                        </a>
                    </li> #}
                </ul>
            </div>

            <div class="certifications">
                <ul>
                    <li>
                        <img src="{{ asset('build/images/certifications/symfony.svg') }}" alt="">
                        <p>Expert·e certifié·e <span>Symfony</span></p>
                    </li>
                    <li>
                        <img src="{{ asset('build/images/certifications/opquast.svg') }}" alt="">
                        <p>Expert·e certifié·e <span>Opquast</span></p>
                    </li>
                </ul>
            </div>

            <ul class="interests">
                <li>🎲</li>
                <li>🎮</li>
                <li>📷</li>
            </ul>
        </div>
    </div>

    {# <h2>Ses derniers articles</h2>
    <div>
        {% for article in articles %}
            <div>
                <img src="{{ asset(article.thumbnail) }}" />
                {{ article.title }}
                <a href="{{ path('blog_article', { article: article.slug }) }}">
                    Lire l'article_
                </a>
            </div>
        {% endfor %}
    <div> #}
{% endblock %}
