{% extends 'base.html.twig' %}

{% block meta_title caseStudy.title ~ ' | ' ~ parent() %}
{% block meta_description caseStudy.description|default(parent()) %}

{% block content %}
    <div class="page-project">
        <ul class="breadcrumb">
            <li class="breadcrumb__item">
                <a href="{{ path('homepage') }}">Accueil</a>
            </li>
            <li class="breadcrumb__item">
                <a href="{{ path('case_studies') }}">Nos études de cas</a>
            </li>
            <li class="breadcrumb__item">
                {{ caseStudy.title }}
            </li>
        </ul>

        <div class="banner">
            <h1 class="banner__title">Découvrez <span>{{ caseStudy.title }}</span></h1>

            <div class="banner__content">
                <div class="highlight">
                    <!--
                        Description brève du projet ou du client
                        Recommandé : 50 à 150 caractères
                    -->
                    <p>Nunc auctor est dolor, eget placerat lorem semper sit amet. Integer aliquet mi orci, et eleifend urna fermetum. Nullam pelletesque frigilla vulputate.</p>
                    <i class="icon icon--semicolon" aria-hidden="true"></i>
                </div>

                <!--
                    3 images de preview maximum dont :
                        - 1 image principale obligatoire
                            - dans <div class="preview__main">
                            - dimensions 630x380px
                        - 2 images facultatives (mais préférables !)
                            - dans <div class="preview__list">
                            - dimensions 240x160px
                -->
                <div class="preview">
                    <div class="preview__main">
                        <img src="https://www.fillmurray.com/630/380">
                    </div>
                    <div class="preview__list">
                        <ul>
                            <li>
                                <img src="https://www.fillmurray.com/240/160">
                            </li>
                            <li>
                                <img src="https://www.fillmurray.com/240/160">
                            </li>
                        </ul>
                        <!-- Si aucun lien vers le site possible, ajouter .hidden au bouton pour le cacher et ne pas casser le layout -->
                        <a href="#" class="btn btn--secondary btn--animated">
                            <span>
                                Voir le site
                                <svg class="icon" xmlns="http://www.w3.org/2000/svg" x="0" y="0" viewBox="0 0 40 20">
                                    <path class="tip" d="M21,2.7 28.2,10.3 21,17.4"/>
                                    <path class="base" d="M28.2,10.3c-0.1,0-18.3,0-27.8,0"/>
                                </svg>
                            </span>
                        </a>
                    </div>
                </div>

            </div>
        </div>

        <div class="page-project__detail">
            <ul>
                <li class="item">
                    <small>Clients</small>
                    <p>CIRano</p>
                </li>
                <li class="item">
                    <small>Utilisateurs</small>
                    <p>Monteur·ses vidéo</p>
                </li>
                <li class="item">
                    <small>Taille du projet</small>
                    <p>3 mois</p>
                </li>
            </ul>
            <ul>
                <li class="item item--medium">
                    <small>Services</small>
                    <p>Accompagnement</p>
                    <p>Développement</p>
                </li>
                <li class="item item--large">
                    <small>Technologies</small>
                    <ul class="technologies technologies--light">
                        <li>
                            <a href="" class="technologies__item">
                                <img src="{{ asset('build/images/technos/symfony.svg') }}" alt="logo Symfony">
                                Symfony
                            </a>
                        </li>
                        <li>
                            <a href="" class="technologies__item">
                                <img src="{{ asset('build/images/technos/algolia.svg') }}" alt="logo Algolia">
                                Algolia
                            </a>
                        </li>
                        <li>
                            <a href="" class="technologies__item">
                                <img src="{{ asset('build/images/technos/graphql.svg') }}" alt="logo GraphQL">
                                GraphQL
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>

        <div class="page-project__content">
            {{ caseStudy.content|raw }}

            <h2 class="h2--dash">La tribu</h2>
            <p>Voici les personnes de l'équipe qui ont contribué au projet.</p>
            <ul class="team">
                <li class="team__profile">
                    <a href="#">
                        <img src="https://www.fillmurray.com/100/100" alt="Anne-Laure De Boissieu">
                        <span class="name">Anne-Laure De Boissieu</span>
                        <span class="job">Développeuse Backend</span>
                    </a>
                </li>
                <li class="team__profile">
                    <a href="#">
                        <img src="https://www.fillmurray.com/100/100" alt="Benjamin Lévêque">
                        <span class="name">Benjamin Lévêque</span>
                        <span class="job">Développeur</span>
                    </a>
                </li>
                <li class="team__profile">
                    <a href="#">
                        <img src="https://www.fillmurray.com/100/100" alt="Maxime Steinhausser">
                        <span class="name">Maxime Steinhausser</span>
                        <span class="job">Développeur</span>
                    </a>
                </li>
                <li class="team__profile">
                    <a href="#">
                        <img src="https://www.fillmurray.com/100/100" alt="Maxime Colin">
                        <span class="name">Maxime Colin</span>
                        <span class="job">Développeur</span>
                    </a>
                </li>
            </ul>

            <h2 class="h2--dash">D'autres études de cas</h2>
            <ul class="article-list">
                <li class="miniature miniature--large">
                    <a href="#" class="miniature__image">
                        <span class="image" style="background: url('https://www.fillmurray.com/460/300')"></span>
                    </a>
