<!DOCTYPE html>
<html lang="{% block meta_locale app.request.locale %}">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block meta_title site.title %}</title>

        {% block meta %}
            <!-- Open Graph / Facebook -->
             <meta property="og:title" content="{{ block('meta_title') }}" />
            <meta property="og:locale" content="{{ block('meta_locale') }}" />
            <meta name="description" content="{% block meta_description site.description %}" />
            <meta property="og:description" content="{{ block('meta_description') }}" />
            <link rel="canonical" href="{{ app.request.uri }}" />
            <meta property="og:url" content="{{ app.request.uri }}" />
            <meta property="og:site_name" content="elao_" />
            {% if meta_cover|default(false) %}
                <meta property="og:image" content="{{ meta_cover }}">
            {% endif %}

            <!-- Twitter -->
            <meta property="twitter:card" content="{% block twitter_card_type 'summary' %}">
            <meta property="twitter:title" content="{{ block('meta_title') }}">
            <meta property="twitter:description" content="{{ block('meta_description') }}">
            <meta property="twitter:site" content="@tom32i">
            <meta property="twitter:creator" content="@tom32i">
            {% if meta_cover|default(false) %}
                <meta property="twitter:image" content="{{ meta_cover }}">
            {% endif %}
        {% endblock %}

        <!-- Optional no-index -->
        {% if noindex is defined and noindex %}
            <meta name="robots" content="noindex" />
        {% endif %}

        {% block stylesheets %}
            {{ encore_entry_link_tags('style') }}
        {% endblock %}
    </head>
    <body>
        <header class="header">
            <div class="container">
                {% block header %}
                    <!--
                        Todo :
                        - only on homepage : on scroll .logo.logo--animated becomes .logo.logo--animated.logo--active (triggers its animation)
                     -->
                    <a href="{{ path('homepage') }}">
                        <span class="screen-reader">{{ block('meta_title') }}</span>
                        {% block logo %}
                            <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewBox="0 0 300 100" class="logo logo--animated">
                                <path d="M61.6,61.6H19.7C21,69,24.8,72.2,32.6,72.2c5.9,0,8.8-1.9,11.7-7.8l16.1,6.9C56.2,82,46.9,87.8,32.1,87.8
                                    c-19.1,0-32-12.6-32-31.6c0-19.5,12.6-32.6,31.4-32.6c18.1,0,30.3,12.6,30.3,31.6C61.7,57.2,61.7,58.9,61.6,61.6z M19.6,49.3h23.6
                                    c-0.2-7.9-4.1-10.9-11.3-10.9S20.7,41.8,19.6,49.3z"/>
                                <path d="M71.2,0.1H90v86.5H71.2V0.1z"/>
                                <path d="M166.1,24.7v61.8h-18.8V72.7c-3.5,9.8-10.5,15.1-20.4,15.1c-17.7,0-27.4-12.9-27.4-32
                                    c0-19.4,9.3-32.2,26.2-32.2c10.5,0,18,5.4,21.6,15.6V24.7H166.1z M147.9,55.7c0-10.4-4.8-15.2-15.1-15.2c-9.9,0-14.6,4.8-14.6,15.2
                                    c0,10.1,4.7,14.9,14.6,14.9C143.1,70.7,147.9,65.9,147.9,55.7L147.9,55.7z"/>
                                <path d="M242.8,55.8c0,19.9-15.3,32-33.6,32s-33.6-12.1-33.6-32s15.3-32.2,33.6-32.2S242.8,35.8,242.8,55.8z M224,55.8
                                    c0-10.4-4.7-15.2-14.8-15.2c-10.1,0-14.8,4.8-14.8,15.2c0,10.1,4.7,14.9,14.8,14.9S224,65.9,224,55.8L224,55.8z"/>
                                <rect x="243.1" y="86.5" width="56.7" height="15"/>
                            </svg>
                        {% endblock %}
                    </a>
                {% endblock %}

                {% set menu = [
                    { path: 'services', label: 'Nos services' },
                    { path: 'methodology', label: 'Notre méthodologie' },
                    { path: 'case_studies', label: 'Nos études de cas', desktop: false },
                    { path: 'values', label: 'Nos valeurs' },
                    { path: 'team', label: 'La tribu' },
                    { path: 'blog', label: 'Blog' },
                    { path: 'contact', label: 'Contact', icon: 'contact', mobileClass: 'nav-mobile__item--large' },
                ] %}

                {% block desktop_nav %}
                    <!-- Desktop nav -->
                    <nav class="nav">
                        <ul>
                            {% for item in menu|filter(item => item.desktop ?? true) %}
                                <li class="nav__item">
                                    <a href="{{ path(item.path) }}">
                                        {% if item.icon ?? false %}
                                            <i class="icon icon--{{ item.icon }}" aria-hidden="true"></i>
                                        {% endif %}
                                        <span>{{ item.label }}</span>
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </nav>
                {% endblock %}

                {% block mobile_nav %}
                    <!-- Mobile nav -->
                    <nav class="nav-mobile">
                        <div class="nav-mobile__header">
                            <a href="{{ path('homepage') }}">
                                {{ block('logo') }}
                            </a>
                            <button class="nav-toggle nav-toggle--close">
                                <i class="icon icon--close" aria-hidden="true"></i>
                                <span class="screen-reader">Fermer le menu</span>
                            </button>
                        </div>
                        <ul>
                            {% for item in menu|filter(item => item.mobile ?? true) %}
                                <li class="nav-mobile__item {{ item.mobileClass|default('') }}">
                                    <a href="{{ path(item.path) }}">
                                        {% if item.icon ?? false %}
                                            <i class="icon icon--{{ item.icon }}" aria-hidden="true"></i>
                                        {% endif %}
                                        <span>{{ item.label }}</span>
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </nav>
                    <button class="nav-toggle nav-toggle--open">
                        <i class="icon icon--hamburger" aria-hidden="true"></i>
                        <span class="screen-reader">Ouvrir le menu</span>
                    </button>
                {% endblock %}
            </div>
        </header>
        <div class="container">
        <main>
            {% block content %}{% endblock %}
        </main>
        {% block footer %}
            <footer class="footer">
                <section class="footer__links">
                    <p class="h1 h1--small">
                        elao
                        <span>développe</span>
                         <span>du lien</span>
                    </p>
                    <div class="links">
                        <ul>
                            <li>
                                <a href="{{ path('services') }}">Nos services</a>
                            </li>
                            <li>
                                <a href="{{ path('case_studies') }}">Nos études de cas</a>
                            </li>
                            <li>
                                <a href="{{ path('blog') }}">Blog</a>
                            </li>
                            <li>
                                <a href="{{ path('methodology') }}">Notre méthodologie</a>
                            </li>
                            <li>
                                <a href="{{ path('team') }}">La tribu</a>
                            </li>
                            <li>
                                <a href="{{ path('contact') }}">Contact</a>
                            </li>
                            <li>
                                <a href="{{ path('values') }}">Nos valeurs</a>
                            </li>
                            <li>
                                {% set count = content_list('App\\Model\\Job', null, { active: true })|length %}
                                <a href="{{ path('jobs') }}">
                                    Nous recrutons
                                    {% if count %}
                                        <span class="bullet">{{ count }}</span>
                                    {% endif %}
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="socials">
                        <ul>
                            <li>
                                <a href="https://github.com/elao">
                                    <i class="icon icon--github"></i>
                                    Github
                                </a>
                            </li>
                            <li>
                                <a href="https://twitter.com/elao">
                                    <i class="icon icon--twitter"></i>
                                    Twitter
                                </a>
                            </li>
                            <li>
                                <a href="https://www.instagram.com/elao_agency/">
                                    <i class="icon icon--instagram"></i>
                                    Instagram
                                </a>
                            </li>
                        </ul>
                    </div>
                </section>
                <section class="footer__legals">
                    <span>© 2005/{{ 'now'|date('Y') }} - ELAO - Tous droits réservés</span>
                    <a href="{{ path('legal') }}">Mentions légales</a>
                    <a href="{{ path('privacy') }}">Protection des données</a>
                </section>
            </footer>
        </div>
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        {#% include 'partials/googleanalytics.js.twig' %#}
    </body>
</html>
